{% include "html_start.njk" %}
{% import "macros.njk" as macros %}

<main class="main">
	<article>
		<h1>{{view.file.meta.title}}</h1>
<div class="intro lead" id="content" style="margin-bottom: 3em;">{{content}}</div>

{% block listing%}
{% for ac in included %}
		<article>
			<header>
				<div class="title-and-meta">
					<h2><a href="{{ac.uri}}">{{ac.file.meta.title}}</a></h2>

                

					<div class="post-meta">
                      
                   
						
						{{ macros.metas(ac) }}
					
					</div>
				</div>
			</header>

            {% set ai = util.guessImage(ac) %}
{% if ai %}
			<figure class="poster-image">
				<img src="{{ai}}">
			</figure>
{% endif %}
		{{util.guessExcerpt(ac)}}

			<div class="continue-reading">
				<a href="{{ac.uri}}">Continue Reading â†’</a>
			</div>
		</article>

{%endfor%}



{% endblock %}
{% block pagination%}
{{macros.pagination(view)}}
{% endblock%}
		
	</article>
</main>

{% include "html_end.njk" %}
